.container 
  %h2 Sign up
  = form_for(resource, as: resource_name, url: registration_path(resource_name), class: 'form') do |f|
    = render "devise/shared/error_messages", resource: resource
    .field.form__item
      = f.label :email
      %br/
      = f.email_field :email, autofocus: true, autocomplete: "email", class: 'form__text'
    .field.form__item
      = f.label :password
      -# - if @minimum_password_length
      -#   %em
      -#     (#{@minimum_password_length} characters minimum)
      %br/
      = f.password_field :password, autocomplete: "new-password", class: 'form__text'
    .field.form__item
      = f.label :password_confirmation
      %br/
      = f.password_field :password_confirmation, autocomplete: "new-password", class: 'form__text'
    .actions.form__btn
      = f.submit "Sign up",class: 'form__btn-text'
